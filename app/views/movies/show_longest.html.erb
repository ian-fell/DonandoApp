<div class="flex flex-col w-full">
  <div class="flex justify-center">
    <p class="text-4xl font-semibold mb-10">Película más Larga</p>
  </div>
  <div class="flex justify-between w-full items-start">
    <%= button_to 'Películas', movies_path, method: :get, class: @class%>
    <%= button_to 'Directores', directors_path, method: :get, class: @class%>
    <%= button_to 'Película Mayor Duración', longest_path, method: :get, class: @class%>
    <%= button_to 'Primero y Último', first_last_path, method: :get, class: @class%>
    <%= button_to 'Mediana', median_path, method: :get, class: @class%>
    <%= button_to 'Más WOWS', most_wows_path, method: :get, class: @class%>
  </div>
  <div class="flex justify-center w-full mt-10">
    <table class="w-3/5 border-2 border-black">
      <thead>
        <tr class="bg-slate-300">
          <th class="text-2xl py-2">Película</th>
          <th class="text-2xl py-2">Duración</th>
          <th class="text-2xl py-2">Director</th>
          <th class="text-2xl py-2">WOWs</th>
        </tr>
      </thead>
      <tbody>
        <tr class="bg-slate-100 hover:bg-zinc-300 text-center py-1 text-lg">
          <td><%= @movie%></td>
          <td><%= @time%></td>
          <td><%= @director%></td>
          <td><%= @wows%></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="flex w-full justify-center">
    <%= image_tag @image, alt: "Poster", class: "w-1/4 h-auto"%>
  </div>
</div>